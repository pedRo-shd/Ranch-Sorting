<div class="thumbnail">
  <div class="caption-full">
      <h4 class="pull-right"><%= @competition.price %></h4>
      <h4><%= @competition.title %></h4>
  </div>
</div>

  <div class="well well-sm">
      <div class="ratings">
          <p class="pull-right"><%= @competition %> comentários</p>
          <p>
           <%= @competition, 'quality' %>
          </p>
      </div>
  </div>

<div class="well">

   <div class="text-right">
     <%# if member_signed_in? %>
       <button type="button" class="btn btn-success" data-toggle="modal" data-target="#commentModal">
         Deixe um comentário
       </button>
       <hr>
     <%# else %>
       <%= link_to "Efetue login para comentar", new_member_session_path, class:"btn btn-success" %>
       <hr>
     <%# end %>
  </div>

    <%#= render partial: 'site/ad_details/comments' %>
    <%#= render partial: 'site/ad_details/comment_modal' %>

</div>
