<h1 class="page-header">Competidor</h1>

  <% if @competitor.errors.any? %>
   <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
           <% @competitor.errors.full_messages.each do |message| %>
          <ul>
              <li><%= message %></li>
          </ul>
       <% end %>
   </div>
  <% end %>

<div class="panel panel-default">
 <div class="panel-heading">
  <%= action %>
 </div>
  <div class="panel-body">
   <div class="col-lg-6">
    <%= form_for([:backoffice, @competitor]) do |f| %>
       <div class="form-group">
        <label>Título da Competição</label>
         <%= f.text_field :name, class:"form-control", placeholder:"Ex: Ilso Dominical" %>
       </div>
         <div class="form-group">
          <label>Estado da Inscrição</label>
          <br>
             <%= f.radio_button :paid, true %> Pagou
             <%= f.radio_button :paid, false, checked: true %> Não Pagou
         </div>
         <div class="form-group">
          <label>Cidade da Competição</label>
           <%= f.text_field :number_races, class:"form-control", placeholder:"Ex: 2" %>
         </div>
         <%= f.hidden_field :competition_id, value: params[:competition_id] %>

      <button type="submit" class="btn btn-primary">Cadastrar</button>
    <% end %>
    </div>
                <!-- /.col-lg-12 -->
  </div>
</div>
