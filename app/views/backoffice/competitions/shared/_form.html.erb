<h1 class="page-header">Competição</h1>

  <% if @competition.errors.any? %>
   <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

           <% @competition.errors.full_messages.each do |message| %>
          <ul>
              <li><%= message %></li>
          </ul>
       <% end %>
   </div>
  <% end %>


<div class="panel panel-default">
 <div class="panel-heading">
  <%= action %>
 </div>
  <div class="panel-body">
   <div class="col-lg-6">
    <%= form_for([:backoffice, @competition]) do |f| %>
       <div class="form-group">
        <label>Título da Competição</label>
         <%= f.text_field :title, class:"form-control", placeholder:"Ex: Os Melhores da Região" %>
       </div>
         <div class="form-group">
          <label>Valor da Inscrição</label>
          <div class="input-group">
             <div class="input-group-addon">R$</div>
             <%= f.text_field :price, class:"form-control", placeholder:"Ex: 50,00" %>
          </div>
         </div>
         <div class="form-group">
          <label>Cidade da Competição</label>
           <%= f.text_field :city, class:"form-control", placeholder:"Ex: São Paulo" %>
         </div>
       <div class="form-group">
        <label>Estado</label>
         <%= f.text_field :state, class:"form-control", placeholder:"Ex: SP" %>
       </div>
      <button type="submit" class="btn btn-primary">Cadastrar</button>
    <% end %>
    </div>
                <!-- /.col-lg-12 -->
  </div>
</div>
