    <h1 class="page-header">Competições</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            Listando Competições
            <%= link_to  new_backoffice_competition_path,
              class: "btn btn-success pull-right", style:"margin-top: -7px" do %>
                <i class="fa fa-plus" style="padding-right: 7px"></i>Nova Competiçao
            <% end %>
        </div>

    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Número</th>
                        <th>Título</th>
                        <th>Valor da Inscrição</th>
                        <th>Cidade da Competição</th>
                    </tr>
                </thead>
                <tbody>
                    <% @competitions.each do |competition| %>
                      <tr>
                          <td><%= competition.id %></td>
                          <td><%= competition.title %></td>
                          <td><%= number_to_currency(competition.price, precision: 2) %></td>
                          <td><%= "#{competition.city}/#{competition.state} "%></td>
                          <td style="width: 200px" align="center">

                          <%= link_to backoffice_competition_path(competition),
                            class: "btn btn-info" do %>
                              <i class="fa fa-sign-in" style="padding-right: 7px"></i>Entrar
                          <% end %>

                            <%= link_to edit_backoffice_competition_path(competition),
                              class: "btn btn-primary btn-circle" do %>
                                <i class="fa fa-edit"></i>
                            <% end %>

                          <% if competition.present? %>
                            <% if competition.competitors.blank? %>
                                <%= link_to  backoffice_competition_path(competition),
                                  method: :delete, class: "btn btn-danger btn-circle",
                                  data: {confirm: 'Tem certeza que deseja deletar esta competição?'} do %>
                                  <i class="fa fa-minus"></i>
                                <% end %>
                            <% else %>
                              <%= link_to "#", disabled: "disabled", title: 'Não é possível deletar competição com competidores',
                                class: "btn btn-danger btn-circle" do %>
                                <i class="fa fa-minus"></i>
                              <% end %>
                            <% end %>
                          <% end %>

                          </td>
                      </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
